	// Représente un champ dans une table ou une requête
	// On y associe 1 champ <=> 1 controle
	classe Champ
	début
		{publique}
		// Données provenant de la table
		var id : entier
		var nom: chaine
		var typeC: chaine
		var longueur, précision: entier
		
		// Données saisies
		var libelle: chaine
		var selectionné: booléen = faux
		var controle : Controle
		
		{public}
		constructeur Champ(id: entier, name: chaine, typeC: chaine, len: entier, prec: entier)
		début
			ceci.id = id
			ceci.nom = name
			ceci.typeC = typeC
			ceci.longueur = len
			ceci.précision = prec
			
			// Par défaut : Textbox
			ceci.controle = instancie ControleTextbox()
		fin
		
		fonction accepte(visiteur: IChampVisiteur)
		début
			visiteur.visiteChamp(ceci)
		fin
	fin

	classe Attribut
	début
		// Types de données supportées par l'attribut
		enumeration TypeAttribut
		début
			'enum'
			'int'
			'bool'
			'float'
			'string'
			'query'
			'object'
		fin

		/// Le nom de l'attribut
		var nom : chaine
		/// Le libellé à afficher
		var label: chaine
		/// Le type de donnée stocké par l'attribut
		var typeA: TypeAttribut 
		/// Visible ou non 
		var visible: booleen
		/// Données complémentaires
		var extra: chaine
		/// La valeur est requise
		var requis: booleen
		/// Valeur par défaut
		var defaut: quelconque
		/// La valeur stockée
		var valeur: quelconque
		
		constructeur Attribut(nom, label: chaine, typeA: TypeAttribut, visible: booléen = vrai, extra: chaine = null, requis: booleen = faux, defaut : quelconque = null)
		début
			ceci.nom = nom
			ceci.label = label
			ceci.typeA = typeA
			ceci.visible = visible
			ceci.extra = extra
			ceci.requis = requis
			ceci.defaut = defaut
			ceci.valeur = defaut
		fin
		
		fonction getHtmlName(owner: chaine, index: quelconque = null)
		début
			si index est null alors
				retourne concatène(owner, '_attr_', mon.nom)
			retourne  concatène(owner, '_attr_', mon.nom, '[', index, ']')
		fin
		
		procédure storeHtmlValue(owner: chaine, index: quelconque)
		début
			écrire '<input type="hidden" name="' + mon.getHtmlName(owner, index) + '" value="' + ceci.valeur + '" />'
		fin
		
		procédure accepte(v :IAttributVisiteur)
		début
			v.VisiteAttribut ceci
		fin
	fin

	{abstraite}
	classe Widget 
	début
		{privé}
		var listeAttributs: Collection<chaine, Attribut>
		
		{publique}
		constructeur Widget()
		début
		  ceci.initListeAttributs()
		fin

		// Procédure de création des attributs nécessaires au contrôle
		{protégée}
		procedure initListeAttributs()
		début
			ceci.ajouteAttribut instancie Attribut('id', 'Identifiant', 'string', vrai)
		fin 
		
		{protégée}
		procédure ajouteAttibut(a : Attribut)
		début
			ceci.listeAttributs.insère a.nom, a
		fin
		
		{publique}
		procédure accepte(v :IWidgetVisiteur)
		début
			v.visiteWidget ceci
		fin
	fin

